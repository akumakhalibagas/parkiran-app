extends ../layout/base
block content
    section.content-header
        h1
            | Add Parkir
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Parkir
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/parkir/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Jenis
                                    input(type='text',value='#{jenis}',name='jenis',placeholder='Enter jenis', autofocus).form-control
                                .form-group
                                    label
                                        | Jumlah
                                    input(type='text',name='jumlah',placeholder='Enter jumlah').form-control
                                .form-group
                                    label
                                        | Harga
                                    input(type='text',value='#{harga}',name='harga',placeholder='Enter harga').form-control
                                .form-group
                                    label
                                        | Waktu
                                    input(type='text',name='waktu',placeholder='Enter waktu').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/parkir').btn.btn-primary.pull-right
                                    | Back